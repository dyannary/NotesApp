@inherits LayoutComponentBase

<head>
    <title>Notes App</title>

    <link rel="stylesheet" href="~/@(nameof(App)).styles.css" />
</head>


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        
        <MudIconButton Icon="@Icons.Material.Filled.Notifications"
                       Color="Color.Default"
                       Target="_blank"
                       OnClick="@(() => OpenDrawer(Anchor.End))" />

        <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                       Color="Color.Info"
                       aria-label="github"
                       Link="https://github.com/1Leomas"
                       Target="_blank">
        </MudIconButton>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                       Color="Color.Secondary"
                       aria-label="github"
                       Link="https://github.com/dyannary"
                       Target="_blank">
        </MudIconButton>

        <MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Light/Dark" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Notes App</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
    
    <MudDrawer @bind-Open="@open" Width="@width" Height="@height" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Notifications</MudText>
        </MudDrawerHeader>
        <MudDivider Class="my-1" />
        <MudListItem>An event is comming soon!</MudListItem>
    </MudDrawer>
</MudLayout>

@code {
    private readonly MudTheme _theme = new();
    private bool _isDarkMode = true;

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    bool open;
    Anchor anchor;
    string width, height;

    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;

        width = "350px";
        height = "100%";
    }
}